.login-container {
    border-top: 1rpx solid #EBEBEB;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.section-1 {
    width: 100%;
    margin-top: 110.6rpx;
    display: flex;
    justify-content: center;
    margin-bottom: 10.6rpx;
}

.section-2 {
    font-family: PingFangSC-Regular;
    font-size: 17px;
    color: #1A1A1A;
    text-align: center;
    margin-bottom: 60rpx;
}

.section-3 {
    position: relative;
    height: 88rpx;
    display: flex;
    border: 2rpx solid #E6E5E5;
    border-radius: 6rpx;
    background-color: #FFF;
    align-items: center;
    margin: 0 60rpx 20rpx 60rpx;
}

.section-3-2 {
    flex: 1;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    padding-left: 20rpx;
}

.section-4 {
    font-family: PingFangSC-Regular;
    margin: 40rpx 62rpx;
    height: 96rpx;
    text-align: center;
    border-radius: 50rpx;
    line-height: 96rpx;
    color: #FFF;
    font-size: 34rpx;
    background-image: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
}

.button-fanhui {
    font-family: PingFangSC-Regular;
    text-align: center;
    line-height: 48rpx;
    color: #999999;
    font-size: 34rpx;
}


/* 企业选择 */

.organize-wrapper {
    z-index: 99;
    background: #fff;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.inputSearch {
    margin: 0 20rpx 20rpx 20rpx;
    padding-left: 67.6rpx;
    background: #F6F6F6;
    border-radius: 30rpx;
    line-height: 60rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
}

.inputSearch-back {
    margin: 0 20rpx 20rpx 20rpx;
    background: #F6F6F6;
    border-radius: 6rpx;
    line-height: 50rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    padding: 0 20rpx;
    color: #333;
}

.organizeItem-wrapper {
    display: flex;
    justify-content: space-between;
    margin: 16rpx 40rpx;
    border-bottom: 1rpx solid #F5F5F5;
}

.organizeName {
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #333333;
}

.organizeAddress {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #999999;
}

.organizeItem-right {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    line-height: 88rpx;
    height: 88rpx;
}

.noResult {
    padding: 10rpx 20rpx;
    font-size: 40rpx;
    color: #666;
}

.organize-select {
    position: relative;
    display: flex;
    padding-bottom: 2rpx;
}

.grow {
    flex-grow: 1;
}
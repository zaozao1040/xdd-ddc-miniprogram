.login-container {
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #efeff4;
    position: fixed;
    top:0;
    bottom:0;
    left:0;
    right:0;
  }
  
  .section-1 {
    width: 100%;
    height: 134rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
  }
  
  .section-2 {
    width: 280rpx;
    padding: 0 50rpx;
    margin: 20rpx auto 30rpx;
    font-size: 30rpx;
    text-align: center;
    color: #808080;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
  }
  .section-2-1 {
    display: inline-block;
    padding: 5rpx 0;
    font-size: 32rpx;
  }
  
  .section-3 {
    border: 1rpx solid #bbbbbb;
    height: 100rpx;
    display: flex;
    border-radius: 10rpx;
    background-color: #FFF;
    align-items: center;
    margin-top: 10rpx;
  }
  
  .section-3-1 {
    width: 96rpx;
    height: 100%;
    border-right: 1rpx solid #e0e0e0;
  }
  
  .section-3-2 {
    flex: 1;
    align-items: center;
    padding: 0 10rpx;
    font-size: 30rpx;
    font-family: "微软雅黑","华文细黑",Arial,Helvetica,sans-serif;
  }
  .section-3-3 {
    width: 96rpx;
    height: 100%;
    border-right: 1rpx solid #bbb;
  }
  .section-4 {
    width: 100%;
    margin-top: 25rpx;
    height: 100rpx;
    text-align: center;
    background-color: forestgreen;
    border-radius: 15rpx;
    line-height: 100rpx;
    color: #FFF;
    font-weight: bold;
    font-size: 36rpx;
  }
  .section-5 {
    font-size: 18rpx;
    margin: 13rpx 0;
    display: flex;
    margin-top: 20rpx;
  }
  .rg-section-v5 {
    border: 1px solid #bfbfbf;
    font-size: 22rpx;
    height: 58rpx;
    line-height: 58rpx;
    width: 138rpx;
    text-align: center;
    margin-right: 28rpx;
    border-radius: 10rpx;
    color: forestgreen;
  }
  .section-6 {
    display: flex;
    justify-content: flex-end;
    font-size: 18rpx;
    color: forestgreen;
    text-align: right;
    margin: 13rpx 0;
  }
  
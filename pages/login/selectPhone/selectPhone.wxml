<view>
    <view class="bg-wrapper" wx:if="{{loginType=='wxAuthorization'}}">
        <view class="img-wrapper">
            <image src="/images/login/logo.png" mode="widthFix" style="width:100%;width:254rpx;height: 102rpx;"></image>
        </view>
        <view class="title">新一代工作餐</view>
        <button class="button" open-type="getPhoneNumber" bindgetphonenumber="handleGetPhoneNumber">微信快捷登录</button>

        <view class='button-a' bindtap='changeValidateType'>手机号登录/注册</view>
    </view>
    <view class="bg-wrapper" wx:else>
        <view class='login-title'>用户名登录</view>
        <view class='login-title-line'></view>
        <view style='padding:72rpx 62rpx; '>
            <view style="border-bottom:1rpx solid  #EBEBEB;padding:10rpx 0 10rpx 40rpx;">

                <input class='input-class' type='text' bindinput="bindNameInput" placeholder="请输入用户名" value="{{name}}" />
            </view>
            <view style="border-bottom:1rpx solid  #EBEBEB;padding:60rpx 0 10rpx 40rpx;margin-bottom:40rpx;">

                <input class='input-class' type='text' password bindinput="bindPwdInput" placeholder="请输入密码" value="{{password}}" />
            </view>

            <view class='button-2' bindtap='loginWithNamePwd'>登录</view>
            <view style='text-align:right;color:#aaa;font-size:30rpx;' bindtap='changeValidateType'>微信手机号快捷登录</view>
        </view>
    </view>
    <view class='agree-des'>登录代表您已同意<text style='color:#F79C4C;'>点点餐用户协议、隐私政策</text></view>
    <!--弹框-->
    <view class="modulebox-background-wrapper" wx:if='{{bindOrganizeFlag}}'>
        <view class='bind-organize-warpper'>
            <view class='bind-organize-title'>提示</view>
            <view class='bind-organize-content'>是否绑定企业?</view>

            <view class='bind-display'>
                <view class='bind-organize-left' bindtap='cancelBind'>直接登录</view>
                <view class='bind-organize-right' bindtap='gotoBind'>去绑定</view>
            </view>
        </view>
    </view>
</view>
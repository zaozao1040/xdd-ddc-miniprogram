.bg-wrapper {
    background-color: #fff;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.img-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 119rpx;
}

.title {
    text-align: center;
    margin-top: 20.6rpx;
    margin-bottom: 146rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-family: PingFangSC-Regular;
    font-size: 17px;
    color: #1A1A1A;
}

.button {
    background-image: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
    border-radius: 50rpx;
    margin: 0rpx 62rpx 40rpx 62rpx;
    height: 96rpx;
    text-align: center;
    line-height: 96rpx;
    color: #FFF;
}

.button-2 {
    background-image: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
    border-radius: 50rpx;
    margin-bottom: 20rpx;
    height: 96rpx;
    text-align: center;
    line-height: 96rpx;
    color: #FFF;
}

.button-phone {
    border-radius: 50rpx;
    margin: 0 62rpx 0 62rpx;
    height: 96rpx;
    text-align: center;
    line-height: 96rpx;
    border: 1px solid #DBDBDB;
    font-family: PingFangSC-Regular;
    font-size: 17px;
    color: #999999;
}

.login-title {
    font-family: PingFang-SC-Medium;
    font-size: 38rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    margin-left: 94rpx;
    padding-bottom: 4rpx;
    margin-top: 58rpx;
}

.login-title-line {
    background-image: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
    box-shadow: 0 4rpx 4rpx 0 rgba(242, 162, 74, 0.36);
    border-radius: 6rpx;
    margin-left: 94rpx;
    width: 188rpx;
    height: 12rpx;
}

.input-class {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;

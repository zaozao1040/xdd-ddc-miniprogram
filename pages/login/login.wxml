<!--pages/register/register.wxml-->
<view class="login-container">
    <image class='section-1' src="../../images/login/icon-avatar.png" style="width: 134rpx;height: 134rpx;margin:30rpx auto;"></image>
    <view class="section-2" style="background: url('../../images/login/icon-star2.png') no-repeat center center;background-size: 363rpx 23rpx;">
        <text class="section-2-1">您想要的员工餐</text>
        <text class="section-2-1">都在这里</text>
    </view>
    <view class="section-3 {{name?'':'section-3-empty'}}">
        <view class="section-3-1" style="text-align: center;display: table;">
            <view style="display: table-cell;vertical-align: middle;">
                <text style="font-size:40rpx;color:#e79b37;" class='iconfont icon-wode'></text>
            </view>
        </view>
        <text wx:if="{{name}}" style="font-size:35rpx;color:#e79b37;position: absolute;right:40rpx;" class='iconfont icon-dagou'></text>
        <input bindinput="nameInput" value="{{name}}" class="section-3-2" placeholder="请输入真实姓名" type="string"></input>
    </view>
    <view class="section-3 {{organize?'':'section-3-empty'}}" catchtap="showAddress">
        <view class="section-3-1" style="text-align: center;display: table;">
            <view style="display: table-cell;vertical-align: middle;">
                <text style="font-size:40rpx;color:#e79b37;" class='iconfont icon-qiye'></text>
            </view>
        </view>
        <text wx:if="{{organize}}" style="font-size:35rpx;color:#e79b37;position: absolute;right:40rpx;" class='iconfont icon-dagou'></text>
        <input bindinput="organizeInput" value="{{organize}}" placeholder="请选择企业22" data-organizecode="{{organizeCode}}" class="section-3-2" type="string" disabled></input>
    </view>
    <view class="section-3 {{usernumber?'':'section-3-empty'}}" wx:if="{{employeeNumber}}">
        <view class="section-3-1" style="text-align: center;display: table;">
            <view style="display: table-cell;vertical-align: middle;">
                <text style="font-size:40rpx;color:#e79b37;" class='iconfont icon-dingdanbianhao'></text>
            </view>
        </view>
        <text wx:if="{{usernumber}}" style="font-size:35rpx;color:#e79b37;position: absolute;right:40rpx;" class='iconfont icon-dagou'></text>
        <input bindinput="usernumberInput" value="{{usernumber}}" class="section-3-2" placeholder="请输入企业工号" type="string"></input>
    </view>

    <button loading="{{loading}}" class="section-4" open-type="getUserInfo" bindgetuserinfo="bindOrganize">绑定并登录</button>
    <navigator url="/pages/login/selectPhone/selectPhone">
        <view class="button-fanhui" open-type="getUserInfo" bindgetuserinfo="bindOrganize">返回</view>
    </navigator>
    <!-- 企业选择 -->
    <view wx:if="{{showAddressFlag}}" class="organize-wrapper">
        <view class="inputSearch-wrapper">
            <view class="inputSearch-left-wrapper" hover-class="none" hover-stop-propagation="false">
                <view catchtap="changeShowAddressFlag" class="iconfont icon-fanhui1 goback"></view>
            </view>
            <view class="inputSearch-right-wrapper" hover-class="none" hover-stop-propagation="false">
                <input bindinput="searchInput" class="inputSearch" maxlength="11" placeholder="搜索企业名..."></input>
            </view>
        </view>
        <view style="height:30rpx;background: #ddd;"></view>
        <scroll-view scroll-y style="height: {{windowHeight - scrollTop}}px;" class="c_scrollPosition_forCalculate">
            <view class="organizeItem-wrapper" wx:for="{{organizeList}}" wx:for-index="organizeIndex" wx:for-item="organizeItem" wx:key="organizeIndex" catchtap="selectOrganize" data-employeenumber="{{organizeItem.employeeNumber}}" data-organizename="{{organizeItem.organizeName}}"
                data-organizecode="{{organizeItem.organizeCode}}">
                <view class="organizeItem-left">
                    <view class="organizeName">
                        {{organizeItem.organizeName}}
                    </view>
                    <view class="organizeAddress">
                        {{organizeItem.address}}
                    </view>
                </view>
                <view class="organizeItem-right">
                    {{organizeItem.locationDistance}}公里
                </view>
            </view>
            <view wx:if="{{organizeListNoResult}}" class="noResult">
                未查询到企业..
            </view>
        </scroll-view>
    </view>
</view>
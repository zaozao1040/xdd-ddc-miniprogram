.xuanzhong-img {
  width: 100%;
  height: 100%;
}
.right-price {
  flex-grow: 1;
  color: white;
  text-align: center;
  padding-top: 40rpx;
}

.label {
  font-size: 32rpx;
  color: red;
}

.number {
  font-size: 70rpx;
  font-weight: 500;
  color: red;
  /* margin-left: -5px; */
}

.content {
  position: relative;
  flex: auto;
  position: relative;
  background: rgb(255, 255, 255);
  padding-left: 20rpx;
  border-radius: 0 12rpx 12rpx 0;
}

.content-name {
  margin-top: 10rpx;
  font-size: 35rpx;
  color: #222;
}
.content-type {
  font-size: 25rpx;
  color: #666;
  display: inline-block;
  padding: 0 8rpx;
  border: 1rpx solid #666;
  border-radius: 5rpx;
}
.content-mealtype {
  font-size: 25rpx;
  color: #666;
  margin-left: 20rpx;
}

.content-desc {
  font-size: 25rpx;
  color: #666;
  margin-right: 20rpx;
}
.content-time {
  font-size: 25rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.button-canClick {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-image: linear-gradient(-90deg, #f79c4c 0%, #f7cd4e 99%);
  border-radius: 3px;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.button-cannotClick {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: #ddd;
  border-radius: 3px;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.flex-a {
  display: flex;
}

.title {
  font-size: 30rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  margin-right: 20rpx;
}

.star {
  width: 32rpx;
  height: 32rpx;
  margin-top: 6rpx;
  margin-right: 6rpx;
}

.img {
  width: 56rpx;
  height: 56rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.tag {
  background: rgba(247, 156, 76, 0.2);
  border-radius: 20rpx;
  height: 36rpx;
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(247, 156, 76, 1);
  line-height: 36rpx;
  padding: 0 30rpx;
  margin-right: 10rpx;
}

.comment {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.c-img {
  width: 164rpx;
  height: 164rpx;
  background: rgba(249, 249, 249, 1);
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.reply {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin: 20rpx 0 28rpx;
}

.food-name {
  font-size: 32rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 56rpx;
  flex-grow: 1;
  border-top: 1rpx solid #f5f5f5;
  padding: 28rpx 0;
}

.date {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  padding: 20rpx 0 30rpx;
}

.reply-item-servicer {
  margin: 20rpx 0;
  background: #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
}
.reply-item-user {
  margin: 20rpx 0;
  background: #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
}
.reply-header {
  display: flex;
  justify-content: space-between;
  color: #666;
}
.reply-img {
  height: 40rpx;
  width: 40rpx;
  border-radius: 20rpx;
}
.reply-time {
  font-size: 25rpx;
}
.reply-content {
  font-size: 30rpx;
}
.reply-button {
  background: #f79c4c;
  height: 40rpx;
  line-height: 40rpx;
  display: inline;
  padding: 8rpx 30rpx;
  border-radius: 10rpx;
  color: white;
  color: white;
  font-size: 30rpx;
}

/* 回复对话框 */
.dialog-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
}
.dialog-wrapper {
  background-color: white;
  margin: 60rpx;
  padding: 40rpx;
  border-radius: 20rpx;
}
.dialog-title {
  text-align: center;
  height: 50rpx;
  line-height: 20rpx;
  font-size: 35rpx;
  color: #222;
}
.textarea {
  height: 260rpx;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}
.dialog-button-wrapper {
  display: flex;
  justify-content: flex-end;
}
.dialog-button {
  background: #f79c4c;
  height: 60rpx;
  line-height: 60rpx;
  display: inline;
  padding: 0 40rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 35rpx;
}

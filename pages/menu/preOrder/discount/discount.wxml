<view>
  <scroll-view
    class="discountBg-wrapper"
    scroll-y
    style="height: {{ windowHeight - 100 }}px;"
  >
    <view class="discountBg-content">
      <c-discount
        discountList="{{ discountList }}"
        selectedDiscountInfo="{{ selectedDiscountInfo }}"
        bind:changeselectdiscount="onChangeSelectDiscount"
        bind:removeselectdiscount="onRemoveSelectDiscount"
      ></c-discount>
    </view>
  </scroll-view>
</view>

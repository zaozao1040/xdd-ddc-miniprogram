.remark-day-wrapper {
    width: 710rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.08);
    border-radius: 12rpx;
    padding: 30rpx 40rpx 40rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.cart-day-title {
    font-size: 30rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 42rpx;
    padding-bottom: 18rpx;
    border-bottom: 2rpx solid #EBEBEB;
}

.cart-menuItem {
    display: flex;
    justify-content: space-between;
    padding-top: 20rpx;
}

.flex-1 {
    display: flex;
}

.cart-menuItem-img {
    width: 72rpx;
    height: 72rpx;
    margin-right: 20rpx;
}

.cart-menuItem-name {
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 72rpx;
}

.cart-menuItem-count {
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 72rpx;
}

.remark-menuItem {
    padding-top: 28rpx;
    display: flex;
    justify-content: space-between;
}

.remark-menuItem-left {
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 60rpx;
}

.remark-menuItem-button {
    width: 120rpx;
    height: 60rpx;
    background: linear-gradient(270deg, rgba(247, 156, 76, 1) 0%, rgba(247, 205, 78, 1) 100%);
    border-radius: 34rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

.remark-name {
    box-sizing: border-box;
    width: 240rpx;
    height: 80rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 76rpx;
    padding-left: 30rpx;
    border: 2rpx solid #EBEBEB;
}

.remark-count-group {
    width: 290rpx;
    height: 80rpx;
    box-sizing: border-box;
    border: 2rpx solid #EBEBEB;
    border-left: none;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx 0 10rpx;
    line-height: 76rpx;
}

.remark-count {
    width: 60rpx;
    flex-grow: 1;
    height: 76rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(247, 156, 76, 1);
    line-height: 76rpx;
    text-align: center;
}

.remark-count-default {
    color: #EBEBEB;
}

.remark-name-default {
    color: #ccc;
}

.remark-delete {
    line-height: 80rpx;
    font-size: 26rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    padding-left: 4rpx;
}

.button {
    position: fixed;
    bottom: 30rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 630rpx;
    height: 100rpx;
    background: linear-gradient(270deg, rgba(247, 156, 76, 1) 0%, rgba(247, 205, 78, 1) 100%);
    border-radius: 50rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 100rpx;
    text-align: center;
}

.circle {
    position: fixed;
    bottom: 150rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: rgba(255, 246, 238, 1);
    box-shadow: 2rpx 6rpx 8rpx 0px rgba(232, 232, 232, 0.5);
    border-radius: 50%;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(242, 153, 74, 1);
    line-height: 100rpx;
    text-align: center;
}
.cart-menu{
  flex: 1;
}
.cart-menuItem{
  display: flex;
  border: 1px solid #ccc;
/*   border-radius: 20rpx; */
  margin-bottom: 4rpx;
  background-color: #fff;
}
.cart-amount{
  float: right;
}
.cart-menuItem-left{
  flex: 0 0 120rpx;
  height: 120rpx;
}
.cart-menuItem-img{
  width: 120rpx;
  height: 120rpx;
/*   border-top-left-radius: 20rpx;

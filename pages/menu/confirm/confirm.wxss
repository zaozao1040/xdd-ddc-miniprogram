/* button按钮 */
.button-wrapper{
  box-sizing:border-box;
  padding: 25rpx 20rpx 10rpx 20rpx;
  width:100%;
  position: fixed;
  bottom:0;
  left: 0;
}
.button {
  width: 100%;
  height: 100rpx;
  text-align: center;
  background-color: #e79b37;
  border-radius: 15rpx;
  line-height: 100rpx;
  color: #FFF;
  font-weight: bold;
  font-size: 36rpx;
}

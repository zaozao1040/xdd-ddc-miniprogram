}
.cart-menuItem-right{
  flex:1;
}
.cart-menuItemDes{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding-left: 20rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}
.cart-menuItemTotalmoney{
  float: left;
  height: 60rpx;
  line-height: 60rpx;

<view>
  <view wx:if='{{loading}}' style='width:100%;height:{{windowHeight}}px;'>
    <image src='/images/menu/menudate_preload.png' style='width:100%;height:{{windowHeight}}px;'></image>
  </view>
  <view wx:else>
    <scroll-view class="wrapper" scroll-y style="height:{{ windowHeight }}px" bindscroll="onScrollOut">
      <view>
        <view class="mask" catchtap="handleCloseCart" wx:if="{{boxActiveFlag}}" catchtouchmove="preventTouchMove"></view>
        <scroll-view scroll-x style="overflow:hidden;white-space:nowrap;" scroll-into-view="{{activeDayId}}" id='scrollscroll'>
          <view wx:for="{{mealDateList}}" wx:for-item="item" wx:for-index="index" wx:key="index" bindtap='clickMealDate' id="day{{index}}" data-index='{{index}}' data-item='{{item}}' style='display:inline-block;margin-right:{{index==6?"40rpx":"60rpx"}};padding-left:{{index==0?"40rpx":"0"}}'>
            <view wx:if='{{item.mealDate!=activeMealDate}}' class="inactive-day-date">{{item.mealDateAbbreviation}}</view>
            <view class="{{item.mealDate==activeMealDate?'active-day':'inactive-day'}}">{{item.description}}</view>
            <view class="{{item.mealDate==activeMealDate?'active-day-line':''}}"></view>
          </view>
        </scroll-view>
        <view class='mealtype-list' id='mealtyleList'>
          <block wx:for="{{ mealTypeList }}" wx:for-item="item"  wx:for-index="index" wx:key="index">
            <view class="{{ item.value == activeMealType ? 'mealtype-active' : 'mealtype-inactive' }}" bindtap="clickMealType"  data-index='{{index}}' data-item='{{item}}'>
              {{ item.label }}</view>
          </block>
        </view>
        <block >
          <view style='border-top:1rpx solid #EBEBEB;' id='menumenu' wx:if="{{foodTypeList.length> 0}}">
            <view style="height: {{ windowHeight - 2 }}px; " class="menu-wrapper c_scrollPosition_forCalculate">
              <!-- 左边餐品分类 -->
              <scroll-view class="menu-left" scroll-y style="height: {{ windowHeight - 2 }}px;">
                <view wx:for="{{ foodTypeList }}" wx:for-item="foodTypeItem" wx:for-index="foodTypeIndex" wx:key="foodTypeIndex" class=" {{ activeFoodType == foodTypeIndex ? 'left-item-active' : 'left-item'}}" data-foodtypeindex="{{ foodTypeIndex }}" bindtap="clickFoodType" >
                  <view style="height:30rpx;">
                    <view wx:if="{{ menuCountList[activeMealDate][mealTypeItem][ foodTypeIndex ]> 0 }}" class="menu-count">
                      {{ menuCountList[activeMealDate][mealTypeItem][foodTypeIndex] }}</view>
                  </view>
                  <!--5/30-->
                  <view class="menu-name-image" wx:if='{{ foodTypeItem.typePicture}}'>
                    <image src='{{foodTypeItem.typePicture}}' style='width:28rpx;height:28rpx;'>
                    </image>
                    <view class="menu-name"> {{ foodTypeItem.typeName }}</view>
                  </view>
                  <view class="menu-name" wx:else>{{ foodTypeItem.typeName }}</view>
                </view>
                <view style="height:340rpx;"></view>
              </scroll-view>
              <!-- 右边具体餐品 -->
              <view class="menu-right">
                <scroll-view class="menu-right-item-wrapper" scroll-y bindscroll="onScrollRight" style="height: {{ windowHeight - 2 }}px;" scroll-into-view="{{ scrollToView }}">
                  <view style='height:20rpx;'></view>
                  <view class="c_foodPosition_forCalculate right-item" wx:for="{{ foodTypeList}}" wx:for-item="foodTypeItem" wx:for-index="foodTypeIndex" wx:key="foodTypeIndex">
                    <!--不能在这判断暂无，因为menuCountList是按顺序的，不是按id的-->
                    <view class='menu-wrapper' style='padding:10rpx 0 30rpx;'>
                      <view id="order{{ foodTypeIndex }}" class="right-item-text">
                        {{foodTypeItem.typeName }}
                      </view>
                      <view wx:if='{{foodTypeItem.typeDesc}}' class='right-item-text-desc'>
                        {{foodTypeItem.typeDesc}}</view>
                    </view>
                    <!-- 单个食物 -->
                    <view id="{{ foodItem.foodCode }}" wx:for="{{ foodTypeItem.foodList }}" wx:for-item="foodItem" wx:for-index="foodIndex" wx:key="{{ foodItem.foodCode }}" bindtap="handleGotoFoodDetail" data-selectedfoodindex="{{selectedFoodIndex}}" data-menutypeindex="{{ onefood.menuItemIndex }}" data-mealtypeitem="{{item}}" data-foodindex="{{ onefood.foodIndex }}" data-dayindex="{{dayIndex}}"
                      data-foodcode="{{ foodItem.foodCode }}" data-typename='{{foodTypeItem.typeName }}' class="food-wrapper">
                      <view wx:if="{{foodItem.sellAllOut }}" class="img-wrapper-stock"></view>
                      <view class="img-wrapper">
                        <image wx:if="{{ foodItem.foodQuota &&foodItem.foodQuota.quotaNum  }}" class='food-img-res' src="/images/menu/order_purchase.png">
                        </image>
                        <image class="food-img" lazy-load src="{{foodItem.image}}"></image>
                      </view>
                      <view class="food-info-wrapper">
                        <view>
                          <view class="food-name">
                            {{foodItem.foodName}}
                          </view>
                          <view class="food-label" wx:if='{{foodItem.foodLabels&&foodItem.foodLabels.length>0}}'>
                            <!-- <view class="food-label-item">{{ foodTypeItem.typeName }}</view> -->
                            <view class="food-label-item" wx:for="{{foodItem.foodLabels}}" wx:key="index">
                              {{ item }}</view>
                          </view>
                          <view wx:if="{{foodItem.canMeal==false}}" style="font-size:20rpx;line-height: 28rpx;color:#ce8307;margin-top:10rpx;">
                            不可使用餐标
                          </view>
                          <view class="foodLimitNum" wx:if="{{foodItem.foodQuota||foodItem.goodRate}}">
                            <block wx:if='{{foodItem.linefoodPrice}}'>
                              <view class="food-stock" wx:if="{{foodItem.foodBeyondQuota&&foodItem.foodBeyondQuota.surplusNum ||foodItem.foodBeyondQuota.surplusNum==0}}">
                                库存:{{foodItem.foodBeyondQuota.surplusNum }}
                              </view>
                            </block>
                            <block wx:else>
                              <view class="food-stock" wx:if="{{foodItem.foodQuota.surplusNum ||foodItem.foodQuota.surplusNum==0}}">
                                库存:{{foodItem.foodQuota.surplusNum }}
                              </view>
                            </block>

                            <view class="food-stock" wx:if="{{ foodItem.foodQuota.quotaNum ||foodItem.foodQuota.quotaNum==0}}">
                              限购:{{foodItem.foodQuota.quotaNum }}
                            </view>
                            <view class="food-stock" wx:if="{{ foodItem.goodRate}}">
                              好评率:{{ foodItem.goodRate }}%
                            </view>
                          </view>
                          <view class="food-desc" wx:if="{{foodItem.description&&!(foodItem.canMeal==false&& foodItem.foodQuota != null)}}">
                            {{foodItem.description}}
                          </view>
                        </view>
                        <view class='price-num-control'>
                          <!-- ***************  + - 添加、减掉餐品的小控件(菜单中) *************** -->
                          <view wx:if="{{foodItem.sellAllOut}}" class="num-control-stock">
                            餐品已售完</view>
                          <view wx:else class="num-control">
                            <image src="/images/menu/cart.png" style="width:50rpx;height:50rpx; " data-item='{{foodItem}}' catchtap="clickCart" />
                          </view>
                        </view>
                      </view>
                    </view>
                  </view>
                  <view style="height:340rpx;"></view>
                </scroll-view>
              </view>
            </view>
            <!-- 【第六排】底部状态栏 -->
            <!-- 【1】灰色状态 -->

            <block wx:if="{{ activeInfoExtra.mealType.standardPrice!=0  }}">
            </block>
            <view class="footer-wrapper-top" wx:elif="{{ activeInfoExtra.mealSet.userCanStandardPrice && payInfo.cartFoodNumber > 0  }}">
              <view wx:if="{{orgAdmin}}" style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                您当前是管理员
              </view>
              <view wx:else class='back-back'>
                <view> 企业单餐抵扣：￥{{allMenuData[activeMealDate][mealTypeItem].deductionMoney}}</view>
              </view>
            </view>
            <view class="footer-wrapper-top" wx:elif="{{ !allMenuData[mealTypeItem].mealSet.userCanStandardPrice && payInfo.cartFoodNumber > 0 }}">
              <view wx:if="{{orgAdmin}}" style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                您当前是管理员
              </view>
              <view wx:else style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                当前额度已被使用
              </view>

            </view>

            <view class="footer-wrapper c_scrollPosition_2_forCalculate" style="z-index:1200;">
              <!--点击购物车-->
              <view class="{{shakeshake?'cartShake':'box-wrapper'}}" bindtap="handleClickBox" id='cartCount'>
                <view wx:if="{{ payInfo.cartFoodNumber > 0 }}" id='cartCount2' style="right:14rpx;position:absolute;z-index:1003;height:32rpx;width:32rpx;background:#FF5035;text-align:center;line-height:32rpx;border-radius:32rpx;font-family: PingFang-SC-Medium;font-size: 22rpx; color: #FFF; letter-spacing: 0;">
                  {{payInfo.cartFoodNumber}}</view>
                <image src="/images/menu/order_closeshop.png" style="height:126rpx;width:126rpx;" wx:if="{{ payInfo.cartFoodNumber == 0 }}"></image>
                <image src="/images/menu/order_shop.png" style="height:126rpx;width:126rpx;" wx:else>
                </image>
              </view>

              <!-- 购物车激活状态 -->
              <view wx:if="{{ payInfo.cartFoodNumber > 0}}" class='flex-a'>
                <view wx:if="{{ totalMoney > 0 }}" style="line-height:100rpx;bottom:0;position:relative;left:160rpx;font-family: PingFang-SC-Medium; font-size: 20px; color: #FFFFFF; letter-spacing: 0; text-align: left;">
                  ￥{{ realTotalMoney }}
                </view>
                <view wx:if="{{ totalMoney > 0 }}" style="text-decoration: line-through; position:relative; left:180rpx;line-height:100rpx;bottom:0;position:relative;font-family: PingFang-SC-Regular; font-size: 12px;color: rgba(255,255,255,0.40); letter-spacing: 0; text-align: left;">
                  ￥{{ totalMoney }}
                </view>
              </view>
              <view wx:else style="position:absolute; left:160rpx;top:4rpx; ">
                <view class='no-shop' style='padding-top:{{orgAdmin?16:0}}rpx;' wx:if='{{!notShowPrice}}'>未选购餐品</view>
                <block wx:if="{{  !activeInfoExtra.mealType.standardPrice}}">
                </block>
                <!--这个是咋判断的，需要问后台没有餐标的时候到底返回啥值-->

                <view wx:else style="position:relative; line-height:28rpx;font-family: PingFang-SC-Regular; font-size: 10px; color: rgba(255,255,255,0.40); letter-spacing: 0; text-align: left;">
                  <view wx:if="{{orgAdmin}}">您当前是管理员</view>
                  <view wx:elif="{{ activeInfoExtra.mealSet.userCanStandardPrice }}">
                    <view class='flex-a'>
                      <view>
                        企业单餐抵扣：￥{{activeInfoExtra.mealType.standardPrice}}
                      </view>
                      <view wx:if="{{ !activeInfoExtra.mealType.followOrganize }}">
                        （自定义餐标）</view>
                    </view>
                    <view>
                      最低消费：￥{{activeInfoExtra.mealType.lowestStandard}}
                    </view>
                  </view>
                  <view wx:else>
                    <view>当前额度已被使用</view>
                    <view>
                      最低消费：￥{{activeInfoExtra.mealType.lowestStandard}}
                    </view>
                  </view>
                </view>
              </view>
              <view class="footer-right" bindtap="goToMenuCommit" style="background:{{ payInfo.cartFoodNumber == 0 ? '#9d9d9d' : '' }}">
                去结算
              </view>
            </view>

            <!-- 【第六排】底部状态栏 -->
            <block wx:if="{{ !activeInfoExtra.mealType.standardPrice   }}">
            </block>
            <view class="footer-wrapper-top" wx:elif="{{ activeInfoExtra.mealSet.userCanStandardPrice && payInfo.cartFoodNumber > 0  }}">
              <view wx:if="{{orgAdmin}}" style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                您当前是管理员
              </view>
              <view wx:else class='back-back'>
                <view> 企业单餐抵扣：￥{{allMenuData[activeMealDate][mealTypeItem].deductionMoney}}</view>
                <view wx:if='{{totalMoney_back}}'> (返回企业餐标{{totalMoney_back}})</view>
              </view>
            </view>
            <view class="footer-wrapper-top" wx:elif="{{ !allMenuData[mealTypeItem].mealSet.userCanStandardPrice && payInfo.cartFoodNumber > 0 }}">
              <view wx:if="{{orgAdmin}}" style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                您当前是管理员
              </view>
              <view wx:else style="position:relative; top:16rpx;  left:280rpx;font-family: PingFang-SC-Regular; font-size: 22rpx; color: #333333; letter-spacing: 0; text-align: left;">
                当前额度已被使用
              </view>

            </view>

            <view class="footer-wrapper c_scrollPosition_2_forCalculate" style="z-index:1200;">
              <!--点击购物车-->
              <view class="{{shakeshake?'cartShake':'box-wrapper'}}" bindtap="handleClickBox" id='cartCount'>
                <view wx:if="{{ payInfo.cartFoodNumber > 0 }}" id='cartCount2' style="right:14rpx;position:absolute;z-index:1003;height:32rpx;width:32rpx;background:#FF5035;text-align:center;line-height:32rpx;border-radius:32rpx;font-family: PingFang-SC-Medium;font-size: 22rpx; color: #FFF; letter-spacing: 0;">
                  {{payInfo.cartFoodNumber}}</view>
                <image src="/images/menu/order_closeshop.png" style="height:126rpx;width:126rpx;" wx:if="{{ payInfo.cartFoodNumber == 0 }}"></image>
                <image src="/images/menu/order_shop.png" style="height:126rpx;width:126rpx;" wx:else>
                </image>
              </view>

              <!-- 购物车激活状态 -->
              <view wx:if="{{ payInfo.cartFoodNumber > 0}}" class='flex-a'>
                <view wx:if="{{ totalMoney > 0 }}" style="line-height:100rpx;bottom:0;position:relative;left:160rpx;font-family: PingFang-SC-Medium; font-size: 20px; color: #FFFFFF; letter-spacing: 0; text-align: left;">
                  ￥{{ realTotalMoney }}
                </view>
                <view wx:if="{{ totalMoney > 0 }}" style="text-decoration: line-through; position:relative; left:180rpx;line-height:100rpx;bottom:0;position:relative;font-family: PingFang-SC-Regular; font-size: 12px;color: rgba(255,255,255,0.40); letter-spacing: 0; text-align: left;">
                  ￥{{ totalMoney }}
                </view>
              </view>
              <view wx:else style="position:absolute; left:160rpx;top:4rpx; ">
                <view class='no-shop' style='padding-top:{{orgAdmin?16:0}}rpx;' wx:if='{{!notShowPrice}}'>未选购餐品</view>
                <block wx:if="{{  !activeInfoExtra.mealType.standardPrice}}">
                </block>
                <!--这个是咋判断的，需要问后台没有餐标的时候到底返回啥值-->

                <view wx:else style="position:relative; line-height:28rpx;font-family: PingFang-SC-Regular; font-size: 10px; color: rgba(255,255,255,0.40); letter-spacing: 0; text-align: left;">
                  <view wx:if="{{orgAdmin}}">您当前是管理员</view>
                  <view wx:elif="{{ activeInfoExtra.mealSet.userCanStandardPrice }}">
                    <view class='flex-a'>
                      <view>
                        企业单餐抵扣：￥{{activeInfoExtra.mealType.standardPrice}}
                      </view>
                      <view wx:if="{{ !activeInfoExtra.mealType.followOrganize }}">
                        （自定义餐标）</view>
                    </view>
                    <view>
                      最低消费：￥{{activeInfoExtra.mealType.lowestStandard}}
                    </view>
                  </view>
                  <view wx:else>
                    <view>当前额度已被使用</view>
                    <view>
                      最低消费：￥{{activeInfoExtra.mealType.lowestStandard}}
                    </view>
                  </view>
                </view>
              </view>
              <view class="footer-right" bindtap="goToMenuCommit" style="background:{{ payInfo.cartFoodNumber == 0 ? '#9d9d9d' : '' }}">
                去结算
              </view>
            </view>
          </view>
          <!-- 不可订餐情况下展示大图 -->

          <!-- 尚未排餐 -->
          <block wx:elif='{{activeInfoExtra.mealType.orderStatus && allMenuData[activeMealDate][mealTypeItem].foodList.length== 0}}'>
            <view style='margin:100rpx auto 20rpx;width:300rpx;height:300rpx;'>
              <image src="/images/menu/orderno.png" style="width:300rpx;height:300rpx;"></image>
            </view>
            <view style='font-family: PingFang-SC-Regular;font-size: 30rpx;color: #999999;letter-spacing: 0;text-align: center;'>
              让您久等了，我们正努力排餐中，稍后再来哦～
            </view>
          </block>
          <!-- 已过截止时间 -->
          <block wx:else>
            <view style='margin:100rpx auto 20rpx;width:300rpx;height:300rpx;'>
              <image src="/images/menu/orderno.png" style="width:300rpx;height:300rpx;"></image>
            </view>
            <view style='font-family: PingFang-SC-Regular;font-size: 30rpx;color: #999999;letter-spacing: 0;text-align: center;'>
              预约时间已截止，下次记得提前预约哦
            </view>
          </block>
        </block>


      </view>
      <!-- 【【另一个页面】】 购物车 -->
      <!--  弹出 购物车 -->
      <view class="{{ boxActiveFlag ? 'in' : 'out' }}" style="display:{{boxActiveFlagFirst?'none':'block'}};position: fixed; bottom: 0; left: 0; right: 0;z-index:1001;" catchtouchmove="preventTouchMove">
        <view class="chart-top">企业总抵扣：￥{{totalMoneyRealDeduction}}</view>
        <view class="chart-top-2">
          <view style="font-family: PingFang-SC-Regular; font-size: 11px; color: #999999; letter-spacing: 0; text-align: left;">
            已选餐品
          </view>
          <view bindtap="handleClearFoods" style="font-family: PingFang-SC-Regular; font-size: 11px; color: #666666; letter-spacing: 0; text-align: left;">
            <text class="iconfont icon-trash_fill"></text> 清空
          </view>
        </view>

        <scroll-view scroll-y style="height: {{ cartHeight }}px;">
          <view class="cart_scrollPosition_forCalculate">
            <block wx:for="{{mealDateList}}" wx:for-item="dayItem" wx:for-index="dayIndex" wx:key="dayIndex">
              <view wx:if="{{selectedFoodsIndex[dayIndex].count>0}}">
                <view class="chart-date">{{dayItem.label}}({{dayItem.mealDateShow}})</view>
                <view wx:for="{{ mealEnglistLabel }}" wx:key="index">
                  <view wx:for="{{ selectedFoodsIndex[dayIndex][item].selectedFoods }}" wx:for-item="onefood" wx:for-index="selectedFoodIndex" wx:key="selectedFoodIndex">
                    <view class='chart-item' wx:if="{{onefood.foodCount>0}}">
                      <!--午餐-->
                      <view class="chart-mealtype">{{ selectedFoodsIndex[dayIndex][item].name }}
                      </view>

                      <view class="chart-food-name-price">
                        <!--菜名-->
                        <view style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                          <view>{{ onefood.foodName }}</view>
                          <view class='over-des' wx:if='{{onefood.linefoodPrice}}'>
                            含{{onefood.foodQuota.surplusNum}}份折扣餐品</view>
                        </view>
                        <!--价格-->
                        <view>
                          <text style="position:relative;left:6rpx;">￥</text>{{ onefood.foodTotalPrice }}
                        </view>
                      </view>

                      <!--原价-->
                      <view class="chart-food-originalprice" wx:if="{{ onefood.foodTotalPrice < onefood.foodTotalOriginalPrice}}">
                        ￥
                        <text style="position:relative;right:6rpx;">{{onefood.foodTotalOriginalPrice}}</text>
                      </view>
                      <view class="chart-food-originalprice" wx:else> </view>

                      <!-- ***************  + - 添加、减掉餐品的小控件(购物车中) *************** -->
                      <view class="chart-num-control">
                        <image src="/images/menu/order_less.png" style="width:40rpx;height:40rpx;" wx:if="{{ onefood.foodCount > 0 }}" data-selectedfoodindex="{{selectedFoodIndex}}" data-mealtypeitem="{{item}}" data-menutypeindex="{{ onefood.menuItemIndex }}" data-dayindex="{{dayIndex}}"
                          data-foodindex="{{ onefood.foodIndex }}" catchtap="handleCartMinusfood">
                        </image>
                        <view wx:if="{{ onefood.foodCount > 0 }}" class="chart-num">
                          {{ onefood.foodCount}}
                        </view>
                        <image src="/images/menu/order_add.png" style="width:40rpx;height:40rpx;" data-selectedfoodindex="{{selectedFoodIndex}}" data-menutypeindex="{{ onefood.menuItemIndex }}" data-mealtypeitem="{{item}}" data-foodindex="{{ onefood.foodIndex }}" data-dayindex="{{dayIndex}}"
                          catchtap="handleCartAddfood">
                        </image>
                      </view>
                    </view>
                  </view>
                </view>
              </view>
            </block>
            <view style="height:350rpx;background:#FFFFFF;"></view>

          </view>
        </scroll-view>
      </view>
      <view class="modulebox-background-wrapper" wx:if='{{notUpToStandardPrice}}'>
        <view class='warpper'>
          <view class='title'>{{notUpToStandardPriceTitle}}</view>
          <view class='content'>{{notUpToStandardPriceContent}}</view>
          <view class='dialog-button' bindtap='closeModal'>知道了</view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

<view class='over-remind' wx:if='{{overRemindFlag}}'>
  该餐品优惠库存已用完, 超出部分将以原价计算哦
</view>
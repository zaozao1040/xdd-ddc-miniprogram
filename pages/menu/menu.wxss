.mask {
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.cartShake {
    animation-name: cartScale;
    animation-duration: 0.5s;
    animation-timing-function: ease;
    animation-fill-mode: forwards;
    width: 126rpx;
    height: 126rpx;
    background-color: black;
    position: absolute;
    right: 0;
    bottom: 0;
    border-radius: 63rpx;
}

@keyframes cartScale {
    0% {
        transform: scale(1);
    }
    20% {
        transform: scale(0.9);
    }
    40% {
        transform: scale(0.8);
    }
    60% {
        transform: scale(1);
    }
    80% {
        transform: scale(0.9);
    }
    100% {
        transform: scale(1);
    }
}

.box-wrapper {
    width: 126rpx;
    height: 126rpx;
    background-color: black;
    position: absolute;
    right: 0;
    bottom: 0;
    border-radius: 63rpx;
}

.in {
    animation-name: show;
    animation-duration: 0.5s;
    animation-timing-function: ease;
    animation-fill-mode: forwards;
}

.out {
    animation-name: fade;
    animation-duration: 0.5s;
    animation-timing-function: ease;
    animation-fill-mode: forwards;
}

@keyframes show {
    from {
        transform: translate(0, 100%);
    }
    to {
        transform: translate(0, 0);
    }
}

@keyframes fade {
    from {
        transform: translate(0, 0);
    }
    to {
        transform: translate(0, 100%);
    }
}


/* pages/home/home.wxss */
.home-container{
  padding: 18rpx 30rpx 0 30rpx;
}
.h-v1 {
    display: flex;
    flex-direction: row;
    height: 84rpx;
    line-height: 84rpx;
    text-align: right;
    width: 100%;
    font-size: 26rpx;
    align-items: center;
}
.h-v1 .h-v1-1 {
    line-height: 84rpx;
    margin-right: 44rpx;
    color: #404040;
    font-size: 26rpx;
    flex: 1;
}
.propaganda-wrapper{

}
.has-login {
    flex: 1;
    margin-right: 44rpx;
    color: #404040;
}
.logout {
    color: #cb2222;
    margin-left: 50rpx;
}
.h-v2 {
    width: 100%;
    height: 250rpx;
    border-radius: 5rpx;
    overflow: hidden;
}
.h-v2-1 {
    height: inherit;
}
.home-image-bk {
    display: inline;
}
.propaganda-wrapper{
  display: flex;
  margin-top: 10rpx;
}
.propaganda-itemwrapper{
  font-size: 0;
  flex:1;
  text-align: center;
}
.icon-propaganda{
  font-size:35rpx;
  font-weight: 300;
  color:green;
  vertical-align: middle;
}
.propaganda-title{
  font-size:25rpx;
  vertical-align: middle;
}
.h-v3 {
    width: 100%;
    padding: 20rpx 0;
}

.h-v3-1 {
    position: relative;
    line-height: 90rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #fff;
    background-color: darkseagreen;
    text-align: center;
    border-radius: 50rpx;
}

.newuser-wrapper{
    display: flex;
    margin-top:15rpx;
}

.promotion-wrapper{
  display: flex;
  margin-top: 30rpx;
}
.promotion-1{
  flex:1;
  height: 220rpx;
  margin: 10rpx 0 0 10rpx;
  position: relative;
  background: aliceblue;
  border-radius: 10rpx;
}
.promotion-img{
    position: absolute;
    right:0;
    bottom: 0;
    width:70%;
    height: 170rpx;
}
.promotion-title{
  padding: 10rpx 10rpx 0 10rpx;
  color:#cb2222;
  font-size: 30rpx;
}
.promotion-des{
  padding: 5rpx 10rpx 0 10rpx;
  font-size: 25rpx;
}





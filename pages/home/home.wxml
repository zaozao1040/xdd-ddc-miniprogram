<!--pages/home/home.wxml-->
<scroll-view>
  <view class="home-container">
    <view class="h-v1" wx:if="{{userInfo}}">
      <view class="has-login">{{wel}} <block wx:if="{{userInfo.nickName}}">{{userInfo.nickName}}</block>
        <open-data wx:else type="userNickName"></open-data>
        <text catchtap="logout" class="logout">退出</text>
      </view>
    </view>
    <view class="h-v1" wx:else>
      <view bindtap="login" class="h-v1-1">
        <navigator wx:if="{{!registered}}" url="/pages/register/register" style="display: inline-block">
          <view class="" style="display: inline-block" bindtap="register">
            <text decode>注册&nbsp;|&nbsp;</text>
          </view>          
        </navigator>
        <navigator url="/pages/login/login" style="display: inline-block">
          <view class="" style="display: inline-block" bindtap="login" decode>
            登录
          </view>       
        </navigator>
      </view>
    </view>
    <!-- 轮播图 -->
    <swiper autoplay="true" class="h-v2-swiper" circular="true"  duration="500" indicatorActiveColor="#fff" indicatorColor="rgb(212, 203, 201)" indicatorDots interval="5000" >
      <swiper-item bindtap="navigateTo" wx:for="{{swiperList}}" wx:for-index="swiperListIndex" wx:for-item="swiperListItem" wx:key="swiperListIndex">
        <navigator url="/pages/home/link?extendUrl={{swiperListItem.url}}">
          <image class="home-image-bk" src="{{swiperListItem.image}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
    <!-- 宣传语 -->
    <view class="propaganda-wrapper">
      <view class='propaganda-itemwrapper' wx:for="{{propagandaList}}" wx:for-index="propagandaIndex" wx:for-item="propagandaItem" wx:key="propagandaIndex">
        <text class='iconfont icon-{{propagandaIconArr[propagandaIndex]}} icon-propaganda' decode>&nbsp;</text>
        <text class='propaganda-title'>{{propagandaItem}}</text>
      </view>
    </view>
    <!-- 开始点餐 -->
    <view class="h-v3">
      <navigator url="/pages/menu/menu">
        <view class="h-v3-1">
        <text class='iconfont icon-canting'></text>
        开始点餐
        </view>
      </navigator>
    </view>
    <!-- 活动 -->
    <view class="promotion-wrapper">
      <view class="promotionItem" wx:for="{{swiperList}}" wx:for-index="promotionListIndex" wx:for-item="promotionListItem" wx:key="promotionListIndex">
        <navigator url="/pages/home/link?extendUrl={{promotionListItem.url}}">
          <image class="promotion-img" src="{{promotionListItem.image}}"/>
        </navigator>        
      </view>
    </view>

    <!-- 新人大礼 -->
    <view class="newuser-wrapper" wx:if="{{!userInfo&&showDaliFlag}}">
      <navigator url="/pages/login/login">
        <view class="img-wrapper">
          <image class="image-dali" src="../../images/home/dali.jpeg" ></image>
        </view>        
      </navigator>  

      <view class="iconfont icon-dacha1" bindtap="closeDali"></view>
    </view>



  </view>
</scroll-view>
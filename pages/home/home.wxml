        <view style="margin-left:30rpx;margin-bottom:80rpx;" wx:if="{{homeOrderList.length>0}}">
            <view class='takefood-title'>今日取餐</view>
            <view>
                <swiper circular="true" duration="500" autoplay="true" next-margin='24rpx' style='width: 100%; height: 172rpx;'>
                    <block wx:for="{{homeOrderList}}" wx:for-index="homeOrderIndex" wx:for-item="homeOrderItem" wx:key="homeOrderIndex">
                        <swiper-item>
                            <view style="display: flex;" class="takefood-food">
                                <view style="flex-shrink:0;">
                                    <image class="takefood-img" src="{{homeOrderItem.foods[0].img}}"></image>
                                </view>
                                <view style="margin-top:16rpx;flex-grow:1;">
                                    <view style="line-height:50rpx;display:flex;">
                                        <view class="takefood-cabinet-title">柜子号</view>
                                        <view class="takefood-cabinet-number" wx:if="{{homeOrderItem.cabinetNums.length>=0}}" data-ordercode="{{homeOrderItem.orderCode}}" data-cabinet="{{homeOrderItem.cabinetNums}}">
                                            <block wx:for="{{homeOrderItem.cabinetNums}}" wx:for-index="cabinetIndex" wx:for-item="cabinetItem" wx:key="cabinetIndex">
                                                {{cabinetItem.cabinetOrder}}-{{cabinetItem.serialNum}}
                                            </block>
                                            A-20
                                        </view>
                                    </view>
                                    <view style="line-height: 52rpx;display:flex;">
                                        <view class="takefood-mealType">
                                            {{mealTypeMap[homeOrderItem.mealType]}}</view>
                                        <view class="takefood-foodname"> {{homeOrderItem.foods[0].foodName}}
                                        </view>
                                        <view wx:if="{{homeOrderItem.foods.length>1}}" class='takefood-foodcount'>
                                            *{{homeOrderItem.foods.length}}</view>
                                    </view>
                                    <view class='takefood-time'>
                                        取餐时间: 今天{{homeOrderItem.takeMealStartTimeDes}}点到{{homeOrderItem.takeMealEndTimeDes}}点
                                    </view>
                                </view>
                                <view class="takefood-button" style="flex-shrink:0;" bindtap="handleTakeOrder" data-ordercode="{{homeOrderItem.orderCode}}" data-cabinet="{{homeOrderItem.cabinetNums}}">取餐</view>
                            </view>
                        </swiper-item>
                    </block>

                    <block wx:for="{{homeOrderList}}" wx:for-index="homeOrderIndex" wx:for-item="homeOrderItem" wx:key="homeOrderIndex">
                        <swiper-item>
                            <view style="display: flex;" class="takefood-food">

<view class="m-qmn">
  <van-cell-group>
    <van-field value="{{ username }}" required label="真实姓名" placeholder="请输入真实姓名" clearable="{{true}}" />
    <van-field value="{{ phone }}" type="number" required label="手机号" placeholder="请输入手机号" clearable="{{true}}" />
    <van-field value="{{ companyName }}" required label="公司名称" placeholder="请输入公司名称" clearable="{{true}}" />
    <van-field value="{{ area }}" required autosize label="公司区域" placeholder="请输入公司区域" clearable="{{true}}">
      <van-button slot="button" color="#f79c4c" size="small" type="primary" bind:click="clickArea">
        选择
      </van-button>
    </van-field>
    <van-field value="{{ address }}" required maxlength="{{100}}" show-word-limit="{{true}}" type="textarea" autosize label="详细地址" placeholder="请输入详细地址" clearable="{{true}}" />
    <van-field value="{{ industryName }}" required label="所属行业" placeholder="所属行业" clearable="{{true}}">
      <van-button slot="button" color="#f79c4c" size="small" type="primary" bind:click="clickHy">
        选择
      </van-button>
    </van-field>
    <van-field value="{{ peopleNumber }}" required label="人员规模" placeholder="人员规模" clearable="{{true}}">
      <van-button slot="button" color="#f79c4c" size="small" type="primary" bind:click="clickGm">
        选择
      </van-button>
    </van-field>
    <view class="qcenter rounded-full h-qsm text-white bg-qbase text-qsm mt-qsm">立即申请试餐</view>
  </van-cell-group>
  <van-popup show="{{ showArea }}" bind:close="onCloseArea" position="bottom">
    <van-area title="选择区域" area-list="{{ areaList }}" value="{{ county }}" bind:confirm="confirmArea" />
  </van-popup>
  <van-popup show="{{ showHy }}" position="bottom" bind:close="onCloseHy">
    <van-picker show-toolbar="{{true}}" title="选择行业" columns="{{ hyListColumns }}" bind:confirm="confirmHy" />
  </van-popup>
  <van-popup show="{{ showGm }}" position="bottom" bind:close="onCloseGm">
    <van-picker show-toolbar="{{true}}" title="选择人员规模" columns="{{ gmListColumns }}" bind:confirm="confirmGm" />
  </van-popup>
</view>
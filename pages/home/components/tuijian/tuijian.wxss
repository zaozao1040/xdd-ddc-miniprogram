.line {
  height: 10rpx;
  background-color: #f8f8f8;
}

.label-wrp {
  padding: 0 20rpx;
  display: flex;
}
.label {
  height: 70rpx;
  line-height: 70rpx;
  font-family: PingFangSC-Regular;
  margin: 0 15rpx;
}

.inactive-label {
  font-size: 30rpx;
  color: #999999;
}
.active-label {
  font-size: 33rpx;
  color: #f79c4c;
}

.food-wrp {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.food-item-wrp {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}
.food-item-inside-wrp {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}
.food-img {
  width: 100%;
  height: 100%;
  position: absolute;
}
.food-img-wrp {
  width: 100%;
  padding-bottom: 100%;
  height: 0;
  position: relative;
}
.food-content {
  width: 100%;
  position: relative;
  padding-bottom: 20rpx;
}
.food-name {
  color: #666666;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  margin: 10rpx 10rpx 0 10rpx;
}
.food-price {
  color: #f56c6c;
  font-size: 30rpx;
  padding: 10rpx 10rpx 20rpx 10rpx;
}
.cart-wrp {
  width: 100%;
}
.cart-img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 10rpx;
  bottom: 50rpx;
}

/* 更多 */
.more{
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  color: #999999;
}
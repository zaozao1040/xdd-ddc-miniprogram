.input {
    font-size: 14px;
    font-family: PingFang-SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 80rpx;
    padding-left: 24rpx;
    width: 530rpx;
    height: 80rpx;
    background: rgba(245, 245, 245, 1);
    border-radius: 6rpx;
}

.wrapper {
    padding: 34rpx 30rpx 30rpx;
    display: flex;
}

.button {
    width: 140rpx;
    height: 64rpx;
    background: linear-gradient(270deg, rgba(247, 156, 76, 1) 0%, rgba(247, 205, 78, 1) 100%) rgba(221, 221, 221, 1);
    border-radius: 10rpx;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 64rpx;
    text-align: center;
    margin: 8rpx 0 0 20rpx;
}

.word-list {
    display: flex;
    border-top: 1rpx solid #F5F5F5;
}

.left-list {
    width: 160rpx;
    background: rgba(247, 248, 248, 1);
    height: 1060rpx;
}

.right {
    width: 590rpx;
}
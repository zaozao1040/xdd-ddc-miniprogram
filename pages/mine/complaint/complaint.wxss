.wrapper {
    background: rgba(255, 255, 255, 1);
    border-radius: 6rpx;
    margin-bottom: 16rpx;
}

.top {
    display: flex;
    padding: 24rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #F5F5F5;
}

.img {
    width: 56rpx;
    height: 56rpx;
    margin-right: 10rpx;
    flex-grow: 0;
    flex-shrink: 0;
}

.name {
    font-size: 30rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 56rpx;
    flex-grow: 1;
}

.time {
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 56rpx;
    flex-grow: 0;
    flex-shrink: 0;
}

.content-wrapper {
    padding: 22rpx 40rpx 30rpx 30rpx;
}

.content,
.content-dot {
    font-size: 30rpx;
    font-family: PingFangSC;
    font-weight: 400;
    line-height: 42rpx;
}

.content {
    color: #333333;
}

.content-dot {
    color: #F79C4C;
    padding-right: 10rpx;
}

.reply {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 34rpx;
    margin-top: 20rpx;
    padding-right: 12rpx;
}

.button {
    margin-left: 40rpx;
    background-image: linear-gradient(-90deg, #F79C4C 0%, #F7CD4E 99%);
    margin-top: 62rpx;
    width: 630rpx;
    font-weight: 400;
    font-size: 34rpx;
    color: #FFF;
    letter-spacing: 0;
    text-align: center;
    line-height: 96rpx;
    border-radius: 50rpx;
    position: fixed;
    bottom: 30rpx;
}

.flex-a {
    display: flex;
    flex-wrap: wrap;
}
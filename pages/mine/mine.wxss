/* pages/mine/mine.wxss */

.mine-wrapper {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.header-wrapper {
    padding: 0 30rpx;
    background: linear-gradient(#e79b37, #eee);
}

.header {
    display: flex;
    background: #fff;
    padding: 30rpx 40rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.mine-service {
    font-family: PingFang-SC-Medium;
    font-size: 34rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    margin: 30rpx 0 60rpx 30rpx;
    line-height: 48rpx;
}

.left {
    margin: auto 30rpx;
    width: 120rpx;
    height: 120rpx;
}

.left-image {
    width: 100%;
    height: 100%;
    border-radius: 60rpx;
}

.middle {
    flex: 1;
    padding-left: 30rpx;
    margin: auto;
}

.middle-line1 {
    display: flex;
    justify-content: space-between;
}

.name {
    font-family: PingFang-SC-Medium;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: left;
    line-height: 120rpx;
}

.userName {
    font-size: 40rpx;
    color: #222;
    font-weight: 500;
}

.userPhone {
    font-size: 30rpx;
    color: #666;
    padding-top: 10rpx;
}

.userDes {
    font-size: 30rpx;
    color: #666;
}

.right {
    margin: auto;
}

.iconfont-title {
    font-size: 50rpx;
    color: #fff;
}



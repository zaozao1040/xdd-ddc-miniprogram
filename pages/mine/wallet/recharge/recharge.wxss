 .content-title {
     font-family: PingFangSC;
     font-size: 34rpx;
     color: #333333;
     letter-spacing: 0;
     text-align: left;
     margin-bottom: 30rpx;
 }
 
 .item-icon {
     font-family: PingFangSC-Regular;
     font-size: 36rpx;
     letter-spacing: 0;
     line-height: 50rpx;
     text-align: center;
 }
 
 .item-money {
     font-family: PingFangSC-Regular;
     font-size: 24rpx;
     letter-spacing: 0;
     text-align: center;
     line-height: 30rpx;
 }
 
 .recharge-title {
     font-family: PingFangSC-Regular;
     font-size: 34rpx;
     color: #333333;
     letter-spacing: 0;
     text-align: left;
     margin: 22rpx 0 30rpx;
 }
 
 .description {
     font-family: PingFangSC-Regular;
     font-size: 24rpx;
     color: #999999;
     letter-spacing: 0;
     text-align: left;
     padding-top: 20rpx;
 }
 
 .wechat {
     font-family: PingFangSC-Regular;
     font-size: 28rpx;
     color: #333333;
     letter-spacing: 0;
     text-align: left;
     margin-left: 20rpx;
     flex-grow: 1;
     line-height: 54rpx;
 }
 
 .chongzhi-item {
     background: #F9F9F9;
     border-radius: 16rpx;
     width: 200rpx;
     padding: 10rpx 0;
 }
 
 .chongzhi-item-active {
     background: #F2994A;
     border-radius: 16rpx;
     width: 200rpx;
     padding: 10rpx 0;
 }
 
 .c_buttonPosition_forCalculate {
     padding: 0 20rpx 20rpx 20rpx;
     position: fixed;
     bottom: 0;
     left: 0;
     right: 0;
     z-index: 10;
 }
 
 .button {
     background: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
     border-radius: 44rpx;
     font-family: PingFangSC-Regular;
     font-size: 30rpx;
     color: #FFFFFF;
     letter-spacing: 0;
     text-align: center;
     line-height: 88rpx;
     height: 88rpx;
 }
 
 .money-list {
     display: flex;
     justify-content: space-between;
     margin-bottom: 20rpx;
 }
 
 .recharge-way {
     display: flex;
     padding-bottom: 30rpx;
     border-bottom: 1rpx solid #EBEBEB;
 }
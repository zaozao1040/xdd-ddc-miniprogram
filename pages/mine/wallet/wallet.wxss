.wallet-wrapper{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom: 0;
  background: #eee;
}
/********** 头部 **********/
.header{
  text-align: center;
  margin: 30rpx 30rpx 0 30rpx;
  padding-top:20rpx;
  border-radius: 30rpx;
  background: goldenrod;
}
.header-des{
  font-size: 30rpx;
  font-weight: 500;
  color:#222;
}
.header-label{
  display: inline-block;
  font-size: 30rpx;
  font-weight: 500;
  color:#222;
}
.header-item{
  display: inline-block;
  font-size: 80rpx;
  font-weight: 800;
  color:black;
}
/********** 内容 **********/
/* 标题 */
.content{

}
.content-header{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #666;
}
.content-header-item{
  flex:1;
  text-align: center;
  font-size: 35rpx;
  font-weight: 600;
  color:#666;
  margin: 0 100rpx;
}
.content-header-item-active{
  border-bottom: 10rpx solid seagreen;
  color:#222;
}
.content-content{

}
/* 充值的内容区域 */
.chongzhi-wrapper{
  margin-top: 10rpx;
}
.chongzhi-item-line{
  display: flex;
  margin: 30rpx 0 30rpx 0;
}
.chongzhi-item{
  flex:1;
  box-sizing: border-box;
  margin:0 30rpx 0 30rpx;
  text-align: center;
  background: #ddd;
  border-radius: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  color:#666;
}
.chongzhi-item-active{
  background: seagreen;
  color:#fff;
}
.chongzhi-label{
  display: inline-block;
  font-size: 30rpx;
  font-weight: 500;
  color:inherit;
}
.chongzhi-money{
  display: inline-block;
  font-size: 50rpx;
  font-weight: 500;
  color:inherit;
}
/* 充值描述 */
.explain-wrapper{
  margin: 20rpx;
}
.explain-title{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  font-weight: 500;
  color:#222;
}
.explain-des{
  display: block;
  margin:0 20rpx 10rpx 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#666;
}
/* 充值方式 */
.wxRecharge-wrapper{
  margin-left:40rpx;
  margin-right: 40rpx;
}
.icon-weixin{
  display: inline-block;
  font-size:60rpx;
  font-weight: 500;
  color:seagreen;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.wxRecharge-des-wrapper{
  display: inline-block;
  margin-left: 20rpx;
}
.wxRecharge-des-1{
  font-size:30rpx;
  font-weight: 500;
  color:#666;
}
.wxRecharge-des-2{
  font-size:20rpx;
  font-weight: 500;
  color:#666;
}
.icon-dagou{
  display: inline-block;
  float: right;
  font-size:60rpx;
  font-weight: 500;
  color:seagreen;
  height: 80rpx;
  line-height: 80rpx;
}

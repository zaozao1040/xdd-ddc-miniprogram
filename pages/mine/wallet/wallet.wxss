.button{
  margin: 20rpx;
  height: 100rpx;
  text-align: center;
  background-color: seagreen;
  border-radius: 15rpx;
  line-height: 100rpx;
  color: #FFF;
  font-weight: bold;
  font-size: 36rpx;
  position: fixed;
  left:0;
  right:0;
  bottom: 0;
}
/* pages/mine/orgAdminSpare.wxss */
.no {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.image {
  width: 320rpx;
  height: 320rpx;
}
.no-label {
  color: #999999;
}
.value-number {
  font-size: 34rpx;
  color: #f79c4c;
  letter-spacing: 0;
  text-align: center;
  height: 80rpx;
  border: 1rpx solid #ebebeb;
  display: flex;
  border-radius: 2rpx;
}

.one-line {
  line-height: 130rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
}

.list-item {
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ccc;
}

.value-number-wrapper {
  display: flex;
  margin: 30rpx 0 20rpx;
}

.value-number-left {
  flex-shrink: 0;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 80rpx;
  margin-right: 20rpx;
}

.remark {
  height: 200rpx;
  color: #333;
  font-size: 28rpx;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.flex-1 {
  display: flex;
}

.remark-delete {
  line-height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(204, 204, 204, 1);
  padding-left: 4rpx;
}

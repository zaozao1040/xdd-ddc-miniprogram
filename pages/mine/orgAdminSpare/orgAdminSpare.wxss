.take-wrapper {
  z-index: 1000;
  background: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  padding: 32rpx 0 30rpx;
  border-radius: 28rpx 28rpx 0px 0px;
  box-sizing: border-box;
  -webkit-animation-duration: 500ms;
  -moz-animation-duration: 500ms;
  -o-animation-duration: 500ms;
  animation-duration: 500ms;
}

.in {
  animation-name: show;
  animation-duration: 0.3s;
  animation-timing-function: linear;
  animation-fill-mode: forwards;
}

.out {
  animation-name: fade;
  animation-duration: 0.3s;
  animation-timing-function: linear;
  animation-fill-mode: forwards;
}

@keyframes show {
  from {
    transform: translate(0, 120%);
  }
  to {
    transform: translate(0, 0);
  }
}

@keyframes fade {
  from {
    transform: translate(0, 0);
  }
  to {
    transform: translate(0, 120%);
  }
}

.take-wrapper.slipUp {
  bottom: 0;
  -webkit-animation-name: dialogSlipToUp;
  -moz-animation-name: dialogSlipToUp;
  -o-animation-name: dialogSlipToUp;
  animation-name: dialogSlipToUp;
}

.take-wrapper.slipBottom {
  top: 100%;
  -webkit-animation-name: dialogSlipToUp;
  -moz-animation-name: dialogSlipToUp;
  -o-animation-name: dialogSlipToUp;
  animation-name: dialogSlipToUp;
}

@keyframes dialogSlipToUp {
  0% {
    top: 100%;
    opacity: 1;
  }
  100% {
    bottom: 10%;
    opacity: 1;
  }
}

@keyframes dialogSlipToBottom {
  0% {
    bottom: 0;
  }
  100% {
    top: 100%;
  }
}


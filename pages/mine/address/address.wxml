<view class="address-wrapper">
    <view class="section-3">
        <view style="margin-left:16rpx;padding:28.6rpx 42.7rpx;width:34.6rpx;height:42.8rpx;background: #FAFAFA;">
            <image src="../../../images/mine/dizhi@2x.png" style='width:34.6rpx;height:42.8rpx;'></image>
        </view>
        <view style='background: #FFFFFF; border-radius: 3px;flex-grow:1;'>
            <!-- <text wx:if="{{addressDes}}" style="font-size:40rpx;color:#e79b37;position: absolute;right:40rpx;" class='iconfont icon-dagou'></text> -->
            <input placeholder-class='placeholder-class' class='phone-number' value="{{addressDes}}" placeholder="请选择企业默认地址" class="section-3-2" type="string" disabled></input>
        </view>
    </view>

    <view class="addressList-wrapper">
        <view class="addressItem-wrapper" wx:for="{{addressList}}" wx:for-index="addressIndex" wx:for-item="addressItem" wx:key="addressIndex" catchtap="selectDefaultAddress" data-addressdes="{{addressItem.address}}" data-addresscode="{{addressItem.deliveryAddressCode}}"
            data-useraddaddress="{{addressItem.userAddAddress}}">
            <view class="address">
                {{addressItem.address}}
            </view>

        </view>
        <view wx:if="{{addressListNoResult}}" class="noResult">
            未查询到企业地址..
        </view>
    </view>
    <view class="button" catchtap="changeDefaultAddress">确定</view>
</view>
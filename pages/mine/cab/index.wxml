<view>
    <c-header currentOrganizeInfo="{{currentOrganizeInfo}}"/>
    <view class="wrapper">
        <view class="labels-wrapper" wx:if="{{cabinetSimpleList.length>0}}">
            <scroll-view class="scroll-view" scroll-x>
                <view class="label-wrapper {{index==currentCabinetIndex?'label-wrapper-active':''}}" wx:for="{{cabinetSimpleList}}" wx:for-index="index" wx:for-item="item" wx:key="index" data-index="{{index}}" data-cabinetCode="{{item.cabinetCode}}" data-cabinetSort="{{item.cabinetSort}}" data-cabinetStatus="{{item.cabinetStatus}}" bindtap="handleClickLabel">
                    <image src='/images/cab/offline.png' wx:if="{{item.cabinetStatus==1}}" style='width:30rpx;height:30rpx;'></image>
                    {{item.cabinetSort}}
                    <image src='/images/cab/xiangxia.png' wx:if="{{index==currentCabinetIndex}}" style='width:30rpx;height:30rpx;'></image>
                </view>
            </scroll-view>
        </view>
        <view class="cells-wrapper">
            <view class="cell-wrapper {{item.userName?'cell-wrapper-hasUser':''}} {{item.heatStatus==1?'cell-wrapper-heat':''}}" wx:for="{{cellList}}" wx:for-index="index" wx:for-item="item" wx:key="index" data-index="{{index}}" data-item="{{item}}" data-type="cell" bindlongpress="handleLongClickCell" bindtap="handleShortClickCell">
                <view wx:if="{{item.runningStatus==0}}" class="cell-inside-wrapper-error">
                    <view class="error-icon iconfont icon-tixing"></view>
                    <view class="cell-error-title">故障</view>
                </view>
                <view wx:else class="cell-inside-wrapper">
                    <view class="cell-code">
                        <image wx:if="{{item.heatStatus==1}}" src="/images/cab/fire.png" style="width: 30rpx; height: 30rpx;"></image>
                      {{item.cellSort}}
                    </view>
                    <view class="cell-name" wx:if="{{item.userCode}}">
                        {{item.userName}}
                    </view>
                    <view class="cell-name cell-name-nouser" wx:else>
                        未绑定
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- 柜子操作的弹出层 -->
    <view class="operation-bg" wx:if="{{showOperationFlag.cabinet}}" catchtap="clickOperation">
        <view class="operation-warpper" catchtap="clickOperationStop">
            <view class="operation-title">
              {{dialogTitle}}
            <image
               src="/images/cab/close.png"
               catchtap="clickOperation"
               style="font-size: 30rpx;"
               class="operation-close-icon"
             ></image>
            </view> 
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="openAll" bindtap="clickCabinetOperation">
                开格
                </button>             
            </view>
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="heatAll" bindtap="clickCabinetOperation">
                加热
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="cancelHeatAll" bindtap="clickCabinetOperation">
                取消加热
                </button>             
            </view>
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="disinfectAll" bindtap="clickCabinetOperation">
                开启消毒灯
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="cancelDisinfectAll" bindtap="clickCabinetOperation">
                关闭消毒灯
                </button>             
            </view>
        </view>
    </view>
    <!-- 格子操作的弹出层 -->
    <view class="operation-bg" wx:if="{{showOperationFlag.cell}}" catchtap="clickOperation" >
        <view class="operation-warpper" catchtap="clickOperationStop">
            <view class="operation-title">
               {{dialogTitle}}
               <image
                src="/images/cab/close.png"
                catchtap="clickOperation"
                style="font-size: 30rpx;"
                class="operation-close-icon"
                ></image>
            </view> 
            <view class="foods-wrapper">
                <view class="foods-wrapper-left">
                    餐品:
                </view>
                <view class="foods-wrapper-right">
                    <view wx:if="{{foodList.length>0}}" class="food-item-wrapper">
                        <view class="food-item" wx:for="{{foodList}}" wx:for-index="index" wx:for-item="item">
                            <view class="food-name">
                                {{item.foodName}} x {{item.foodCount}}
                            </view>
                            <view class="food-unbind" data-orderCode="{{item.orderCode}}" data-index="{{item.index}}" bindtap="handleUnbind">解绑</view>
                        </view>
                    </view>  
                    <view wx:else class="food-item-nofood">
                        暂无绑定..
                    </view>                  
                </view>    
            </view>
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="open" bindtap="clickCellOperation">
                开格
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="bind" bindtap="clickCellOperation">
                绑定
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="openBind" bindtap="clickCellOperation">
                开格并绑定
                </button> 
            </view>
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="heat" bindtap="clickCellOperation">
                加热
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="cancelHeat" bindtap="clickCellOperation">
                取消加热
                </button>            
            </view>
            <view>
                <button class="operation-button" size="mini" type="default" plain data-type="disinfect" bindtap="clickCellOperation">
                开启消毒灯
                </button> 
                <button class="operation-button" size="mini" type="default" plain data-type="cancelDisinfect" bindtap="clickCellOperation">
                关闭消毒灯
                </button>            
            </view>
        </view>
    </view>
</view>
/* 基本信息 */

.basic-info {
    background: #fff;
    /*   border-bottom-left-radius: 50rpx;
border-bottom-right-radius: 50rpx; */
}

.header-wrapper {
    display: flex;
    justify-content: space-between;
    padding: 12rpx 140rpx 20rpx;
    border-bottom: 1rpx solid #eee;
}

.header-item {
    font-family: PingFang-SC-Regular;
    color: #999;
    font-size: 30rpx;
    background: #FFFFFF;
    box-shadow: inset 0 0 0 0 #EBEBEB;
    letter-spacing: 0;
    line-height: 42rpx;
}

.header-item-active {
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 42rpx;
}

.header-item-border {
    height: 14rpx;
}

.header-item-border-active {
    height: 6rpx;
    background: linear-gradient(-90deg, #F79C4C 0%, #F7CD4E 99%);
    border-radius: 4rpx;
    width: 60rpx;
    margin: 8rpx auto 0;
}

.food-wrapper {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
}

.img-wrapper {
    width: 100%;
}

.food-info-wrapper {
    padding: 30rpx;
}

.foodName {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    margin-bottom: 10rpx;
    line-height: 50rpx;
}

.tag-wrapper {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 10rpx;
}

.tag-item {
    background: #F5F5F5;
    border-radius: 4rpx;
    padding: 0 8rpx;
    height: 28rpx;
    line-height: 28rpx;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    margin-right: 10rpx;
}

.price {
    display: flex;
    margin-bottom: 18rpx;
}

.price-real {
    font-family: HelveticaNeue-Medium;
    font-size: 36rpx;
    color: #FF7800;
    letter-spacing: 0;
    text-align: left;
    line-height: 46rpx;
}

.price-original {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
    text-align: left;
    text-decoration: line-through;
    line-height: 46rpx;
}

.merchant {
    display: table;
    padding: 2rpx 0;
}

.icon-merchant {
    display: table-cell;
    vertical-align: middle;
    font-size: 35rpx;
    color: #e79b37;
    height: 40rpx;
    line-height: 40rpx;
}

.merchantName {
    display: table-cell;
    vertical-align: middle;
    font-size: 25rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 20rpx;
    color: #111;
    background: rgb(209, 231, 247);
    border-radius: 6rpx;
}

.foodDes {
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #999999;
    letter-spacing: 0;
    text-align: left;
}


/* 评价 */


.btn {
    display: inline-block;
    margin: 30rpx 30rpx 20rpx 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #fff;
    background: #e79b37;
    padding: 5rpx 20rpx;
    border-radius: 10rpx;
}

.active {
    box-shadow: 7px 4px 7px #666;
    position: relative;
    top: -3rpx;
    left: -7rpx;
    color: #fff200!important;
}

.tab-wrapper {
    display: flex;
}

.tab {
    flex: 0 0 200rpx;
    padding: 0 10rpx 20rpx 10rpx;
    font-size: 30rpx;
}

.icon-gouxuan {
    color: #e79b37;
}

.tab-des {
    color: #666;
}


/* 每个具体评论 */

.ratingsItem {
    display: flex;
    padding: 22rpx 30rpx 10rpx;
}

.left {
    height: 80rpx;
    width: 80rpx;
}

.left-image {
    width: 100%;
    height: 100%;
    border-radius: 50rpx;
}

.right {
    flex: 1;
    margin-left: 40rpx;
    border-bottom: 1rpx solid #eee;
}

.line1 {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8rpx;
}

.user {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #666666;
    letter-spacing: 0;
    text-align: left;
    line-height: 36rpx;
}

.time {
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #999999;
    letter-spacing: 0;
    text-align: right;
    line-height: 28rpx;
}

.mask {
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.line2 {
    margin-bottom: 22rpx;
    display: flex;
}

.line3 {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: left;
    line-height: 42rpx;
    margin-bottom: 10rpx;
}

.line-reply {
    margin-top: 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
    text-align: left;
    padding-bottom: 20rpx;
}

.ratings-swiper {
    margin: 5rpx 20rpx;
    height: 200rpx;
}

.img3 {
    width: 33%;
}

.swiper-img {
    width: 100%;
    height: auto;
}


/* 标题 */

.food-header {
    position: sticky;
    top: 0;
    width: 100%;
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #bbb;
    background: #eee;
}

.food-content {
    width: 100%;
}

.content-header-item {
    flex: 1;
    text-align: center;
    font-size: 35rpx;
    font-weight: 600;
    color: #666;
    margin: 0 70rpx;
}

.content-header-item-active {
    border-bottom: 10rpx solid #e79b37;
    color: #e79b37;
    font-size: 40rpx;
}
/*去付款的弹窗*/

.pay-wechat {
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
}

.pay-balance {
    display: flex;
    justify-content: space-between;
    padding: 32rpx 40rpx 56rpx;
}

.pay-button {
    display: flex;
    justify-content: space-between;
    padding: 0 36rpx;
}

.cancel-button {
    display: flex;
    justify-content: space-between;
    margin: 0 30rpx;
}

.one-order {
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.08);
    border-radius: 6px;
    background: #FFFFFF;
    margin: 24rpx 20rpx 0;
    padding: 0 30rpx 40rpx 30rpx;
    display: flex;
}

.order-image {
    height: 88rpx;
    width: 88rpx;
    flex-shrink: 0;
}

.order-right {
    margin-left: 20rpx;
    flex-grow: 1;
}

.order-right-top {
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
    height: 138rpx;
}

.order-cabinet-num-group {
    display: flex;
}

.food-take {
    display: flex;
    justify-content: space-between;
    padding: 21rpx 0 40rpx;
}

.order-button {
    display: flex;
    justify-content: flex-end;
}


/********** 去付款弹出的选择支付方式对话框 **********/

.selectPayType-wrapper {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(102, 102, 102, 0.5);
}

.selectPayType {
    position: absolute;
    height: 440rpx;
    width: 560rpx;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    background: #fff;
    border-radius: 16rpx;
}

.selectPayType_line1 {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    padding: 50rpx 0 44rpx;
}

.selectPayType_Des {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
    text-align: left;
    line-height: 44rpx;
}

.selectPayType_button {
    border: 2rpx solid #CCCCCC;
    border-radius: 50rpx;
    width: 216rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
}

.selectPayType_button_check {
    background: linear-gradient(270deg, #F79C4C 0%, #F7CD4E 99%);
    border-radius: 50rpx;
    width: 220rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
}

.mask {
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.close {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}

.title {
    border-top: 1rpx solid #F5F5F5;
    line-height: 100rpx;
    text-align: left;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    padding-left: 60rpx;
}

.foodItem {
    padding: 30rpx 60rpx;
    border-bottom: #F5F5F5 solid 2rpx;
}

.foodItem:last-child {
    border-bottom: none;
}

.foodName {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #333333;
    height: 42rpx;
    margin-bottom: 12rpx;
}

.foodDes {
    font-family: PingFangSC-Regular;

/* pages/order/order.wxss */
.wrapper{
  display: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgb(233, 233, 233);
  padding: 0 10rpx;
}
.title-wrapper{
  display: flex;
}
.titleItem{
  flex: 1;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin: 10rpx auto;
}
.orderStatusActive{
  color: #43964e;
  font-weight: 600;
  border-bottom: 5rpx solid #43964e;
}
/*************每个订单*************/
.order-wrapper{
  display: flex;
  padding: 10rpx;
}
.img-wrapper{
  position: relative;
  width: 20%;
  height: 0;
  padding-bottom: 20%;
}
.order-img{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  border-radius: 30rpx;
}
.orderInfo-wrapper{
  width: 80%;
  padding-left:10rpx;
  padding-right: 10rpx;
  flex: 0 0 auto;
}
.order-name{
  font-size: 40rpx;
}
.order-selfpayprice{
  font-size: 40rpx;
  color: red;
}
.order-mealtime{
  font-size: 30rpx;
}
.order-count{
  font-size: 30rpx;
}
.order-status{
  font-size: 30rpx;
}

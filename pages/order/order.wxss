/* pages/order/order.wxss */
.wrapper{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom: 0;
  background: #eee;
}

/********** 标题 **********/
.header-wrapper{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #666;
}
.header-item{
  flex:1;
  text-align: center;
  font-size: 35rpx;
  font-weight: 600;
  color:#666;
  margin: 0 100rpx;
}
.header-item-active{
  border-bottom: 10rpx solid #e79b37;
  color:#e79b37;
}

/********** 内容 **********/
.order-wrapper{
  box-sizing: border-box;
  padding: 20rpx;
  overflow: hidden;
}
.order-item{
  border-bottom: #aaa solid 1rpx;
}
.order-item:last-child{
  border-bottom: none;
}
.order-type{
  font-size: 40rpx;
  font-weight: 500;
  color:#222;
  
}
.order-status{
  font-size: 30rpx;
  font-weight: 500;
  color:#222;
}
.order-time{
  margin:auto 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#666;
}
.foods-wrapper{
  margin:auto 20rpx;
}
.food-item{
  margin:auto 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#666;
}
.food-name{
  margin:auto 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#222;
}
.food-count{
  margin:auto 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#222;
}

/* 各种按钮 */
.button-wrapper{
  display: flex;
  justify-content: right;
}
.button{
  flex: 0 0 150rpx;
  width: 50rpx;
  margin: 5rpx 0 10rpx 10rpx;
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #e79b37;
  border-radius: 15rpx;
  color: #FFF;
  font-weight: bold;
  font-size: 30rpx;
}
.quxiao{
  background-color: #999;
}







}

.foodPrice {
    color: #FF7800;
}

.welcome {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #666666;
    height: 42rpx;
    margin-top: 30rpx;
    padding: 30rpx 0 20rpx 0;
    text-align: center;

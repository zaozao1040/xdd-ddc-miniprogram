.top {
    display: flex;
    border-bottom: 1rpx solid #F5F5F5;
    padding: 30rpx 30rpx 20rpx;
}

.img {
    width: 56rpx;
    height: 56rpx;
    margin-right: 10rpx;
    border-radius: 50%;
}

.name {
    flex-grow: 1;
    font-size: 30rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    margin-top: 8rpx;
    line-height: 42rpx;
}

.date {
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 28rpx;
    margin-top: 16rpx;
}
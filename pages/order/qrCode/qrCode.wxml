<view class="title">

</view>
<canvas class='canvas' style="margin:auto;width:{{code_w}}px; height:{{code_w}}px;" canvas-id='canvas'></canvas>
<view class="date">
    {{detailInfo.mealDate}} {{detailInfo.mealTypeDes}}
</view>
<view class="food-wrapper">
    <view class="foodItem" wx:for="{{detailInfo.orderFoodList}}" wx:for-index="foodListIndex"
        wx:for-item="foodListItem">
        <view class="foodName">
            {{foodListItem.foodName}}
        </view>
        <view class="foodQuantity">
            x {{foodListItem.foodQuantity}}份
        </view>
    </view>
</view>
<view wx:if="{{detailInfo.startTime}}" class="qucan">
    取餐时间: {{detailInfo.startTime}}~{{detailInfo.endTime}}
</view>
<view class="user">
    {{userInfo.userName}}({{userInfo.phoneNumber}})
</view>
<view class="organize">
    {{userInfo.organizeName}}
</view>
<block wx:if="{{ningxiaOrgFlag}}">
    <view wx:if="{{pickStatus===1}}" class="button" bindtap="updateOrderStatus">
        取餐
    </view>
    <view wx:elif="{{pickStatus===2}}" class="yiqucan">
        已取餐
    </view>
    <view wx:elif="{{pickStatus===0}}" class="weidao">
        不可取餐
    </view>
</block>